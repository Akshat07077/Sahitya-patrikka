generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  firstName     String
  lastName      String
  phone         String?
  organization  String?
  role          UserRole  @default(USER)
  isActive      Boolean   @default(true)
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  articles            Article[]
  contactSubmissions  ContactSubmission[]
}

model Article {
  id                String        @id @default(cuid())
  title             String
  abstract          String?
  keywords          String[]
  authorName        String
  authorEmail       String
  authorAffiliation String?
  docxUrl           String?
  pdfUrl            String?
  status            ArticleStatus @default(PENDING)
  submissionDate    DateTime      @default(now())
  reviewDate        DateTime?
  publishedDate     DateTime?
  rejectionReason   String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  userId            String
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  editorialBoardId  String?
  editorialBoard    EditorialBoard? @relation(fields: [editorialBoardId], references: [id])
}

model EditorialBoard {
  id          String    @id @default(cuid())
  name        String
  title       String
  affiliation String
  email       String?
  bio         String?
  photoUrl    String?
  orderIndex  Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  articles    Article[]
}

model ContactSubmission {
  id           String   @id @default(cuid())
  name         String
  email        String
  subject      String
  message      String
  phone        String?
  organization String?
  status       ContactStatus @default(NEW)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId       String?
  user         User?   @relation(fields: [userId], references: [id])
}

enum UserRole {
  USER
  ADMIN
  EDITOR
  REVIEWER
}

enum ArticleStatus {
  PENDING
  UNDER_REVIEW
  APPROVED
  REJECTED
  PUBLISHED
}

enum ContactStatus {
  NEW
  IN_PROGRESS
  RESOLVED
  CLOSED
}

